FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            movingWallVelocity;
        value           uniform (0 0 0);
    }
    outlet
    {
        type            waveAbsorption2DVelocity;
        absorptionDir   180;
        nPaddles        1;
        value           uniform (0 0 0);
    }
    bottom
    {
        /*type            fixedValue;
        value           uniform (0 0 0);*/
		type			noSlip;
    }
    "wall."
    {
        /*type            fixedValue;
        value           uniform (0 0 0);*/
		type			noSlip;

    }
    atmosphere
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
    }
}


